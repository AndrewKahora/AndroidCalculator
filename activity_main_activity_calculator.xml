<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.andrew.androidcalculator.MainActivityCalculator"
    android:background="#b43d3d">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:background="#fefefe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:gravity="bottom|right"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#5e4d4d" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_marginLeft="0dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_8"
        android:id="@+id/btn8"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_9"
        android:id="@+id/btn9"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_6"
        android:id="@+id/btn6"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_5"
        android:id="@+id/btn5"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn8"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_toStartOf="@+id/btn9"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_4"
        android:id="@+id/btn4"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn9"
        android:layout_alignLeft="@+id/btn9"
        android:layout_alignStart="@+id/btn9"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_3"
        android:id="@+id/btn3"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_2"
        android:id="@+id/btn2"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn3"
        android:layout_toLeftOf="@+id/btn4"
        android:layout_toStartOf="@+id/btn4"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_1"
        android:id="@+id/btn1"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/c"
        android:id="@+id/btnClear"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/_0"
        android:id="@+id/btn0"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btnClear"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_toEndOf="@+id/btnClear"
        android:textSize="20sp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/btnEqual"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn0"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="onClickEqual" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="x"
        android:id="@+id/btnMult"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:id="@+id/btnDivide"
        android:background="#424040"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btnEqual"
        android:layout_toRightOf="@+id/btnEqual"
        android:layout_toEndOf="@+id/btnEqual"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="true" />

</RelativeLayout>
